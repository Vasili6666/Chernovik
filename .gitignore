# Создаем файл .gitignore в корне проекта
cat > .gitignore << EOF
# IDE
.idea/
*.iws
*.iml
*.ipr
# *.ajcore
# Build
build/
out/

# AspectJ debug files
*.ajcore
ajcore.*


target/
*.jar
*.war
*.ear

# Gradle
.gradle/
gradle-app.setting

# OS
.DS_Store
Thumbs.db

# Logs
*.log
logs/

# Temp
tmp/
temp/

# Other
*.class
*.bak
*.save
EOF